<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Murales La Plata</title>
    <meta name="viewport" content="initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Roboto:400,100,300,700,900|Material+Icons|Rock+Salt" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('bower_components/angular-material/angular-material.min.css') }}"charset="utf-8">
    <link rel="stylesheet" href="{{ asset('bower_components/angular-carousel/dist/angular-carousel.min.css') }}" charset="utf-8">
    <link rel="stylesheet" href="{{ asset('dist/styles.min.css') }}" media="screen" charset="utf-8">
  </head>
  <body ng-app="MuralesLaPlata" ng-cloak id="body">

    {% raw %}
    <div ng-controller="AppController" ng-cloak class="main-page">
      <md-sidenav class="md-sidenav-left md-whiteframe-6dp" md-component-id="left">
        <md-toolbar>
          <div class="md-toolbar-tools">
            <h1><span>Murales la Plata</span></h1>
            <span flex></span>
            <md-button class="md-icon-button" aria-label="close" ng-click="toggleSidebar()">
              <md-icon class="material-icons">chevron_left</md-icon>
            </md-button>
          </div>
          <div class="toolbar-content">
        		<img src="https://lh3.googleusercontent.com/-_mHhaRP_Vrg/AAAAAAAAAAI/AAAAAAAAAAA/jb6CP_8QPY0/s96-c-mo/photo.jpg">
            <div class="title">
              <span class="md-headline">Matias Pierobon Marcos</span>
              <span class="md-subhead">Administrador</span>
            </div>
          </div>
        </md-toolbar>
        <md-content>
          <md-list ng-cloak>
            <md-list-item ng-repeat="item in menuItems" ng-click="go(item.state)">
              <md-icon class="material-icons">{{ item.icon }}</md-icon>
              <p>{{ item.name }}</p>
            </md-list-item>
            <md-divider></md-divider>
            <md-list-item ng-repeat="item in adminMenu" ng-click="go(item.state)">
              <md-icon class="material-icons">{{ item.icon }}</md-icon>
              <p>{{ item.name }}</p>
            </md-list-item>
            <md-divider></md-divider>
            <md-list-item ng-click="go('about')">
              <md-icon class="material-icons">exit_to_app</md-icon>
              <p>Cerrar Sesi√≥n</p>
            </md-list-item>
          </md-list>
        </md-content>
      </md-sidenav>
      <div ui-view></div>
    </div>
    {% endraw %}

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBftV0TYpM5bF7Wp3jzg9WphM75OrlUck8&" type="text/javascript"></script>
    <script src="{{ asset('bower_components/lodash/lodash.min.js') }}" charset="utf-8"></script>
    <script src="{{ asset('bower_components/angular/angular.min.js') }}" charset="utf-8"></script>
    <script src="{{ asset('bower_components/angular-resource/angular-resource.min.js') }}" charset="utf-8"></script>
    <script src="{{ asset('bower_components/angular-animate/angular-animate.min.js') }}" charset="utf-8"></script>
    <script src="{{ asset('bower_components/angular-aria/angular-aria.min.js') }}" charset="utf-8"></script>
    <script src="{{ asset('bower_components/angular-messages/angular-messages.min.js') }}" charset="utf-8"></script>
    <script src="{{ asset('bower_components/angular-material/angular-material.min.js') }}" charset="utf-8"></script>
    <script src="{{ asset('bower_components/angular-ui-router/release/angular-ui-router.min.js') }}" charset="utf-8"></script>
    <script src="{{ asset('bower_components/angular-simple-logger/dist/index.js') }}" charset="utf-8"></script>
    <script src="{{ asset('bower_components/angular-google-maps/dist/angular-google-maps_dev_mapped.min.js') }}" charset="utf-8"></script>
    <script src="{{ asset('bower_components/angular-touch/angular-touch.min.js') }}" charset="utf-8"></script>
    <script src="{{ asset('bower_components/angular-carousel/dist/angular-carousel.min.js') }}" charset="utf-8"></script>

    <script src="{{ asset('dist/app.min.js') }}" charset="utf-8"></script>
  </body>
</html>
